[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    docs/,
    build/,
    dist/,
    venv/,
    .venv/,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
max-complexity = 10
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811
